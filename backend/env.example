# Database Configuration
# For Supabase: postgresql://postgres:[password]@[host]:5432/postgres
# For local SQLite: sqlite:///./delivery_app.db
DATABASE_URL=sqlite:///./delivery_app.db

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-for-external-access

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=False

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "https://yourdomain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Password Security
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Trusted Hosts
TRUSTED_HOSTS=["localhost", "127.0.0.1", "yourdomain.com"]








